/* Exponentiation rapide */

let
    var val := 3
    var exposant := 13

    function modulo(a:int, b:int) : int = a - (a/b)*b

    function expo(a:int, n:int) : int =
        if (n = 0) then 1
        else (
            if (modulo(n,2)) then (
                expo(a,n/2) * expo(a,n/2) * a
            )
            else (
                expo(a,n/2) * expo(a,n/2)
            )
        )

    in print(expo(val,exposant)) end
